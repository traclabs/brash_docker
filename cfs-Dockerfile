FROM ubuntu

ARG DEBIAN_FRONTEND=noninteractive
RUN apt update && apt install -y build-essential gdb nano cmake git pkg-config sudo && rm -rf /var/lib/apt/lists/*

ARG USERNAME=brash_user
ARG USER_UID=1000
ARG USER_GID=$USER_UID
RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -s /sbin/nologin -m -c "Brash User" $USERNAME
USER $USERNAME

# Note: ADD/COPY doesn't respect USER directive above, so explicit chown is required
ADD --chown=$USERNAME:$USERNAME cFS /src/cFS
WORKDIR /src/cFS

RUN make prep SIMULATION=native && make && make install

WORKDIR /src/cFS/build/exe/cpu2
CMD ./core-cpu2
